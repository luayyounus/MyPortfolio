@page
@model LoginModel
@{ 
    Layout = "_Layout";
    ViewData["Title"] = "User Login";
}

<form method="post" class="form-horizontal">

    @if (!ModelState.IsValid)
    {
        <div class="col-md-offset-2 col-md-10">
            <h4 class="text-danger">Please try again.</h4>
            <div asp-validation-summary="All"></div>
        </div>
    }

    <div class="form-group">
        <label asp-for="CurrentUser.EmailAddress" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="CurrentUser.EmailAddress" class="form-control" placeholder="Email Address" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CurrentUser.Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="CurrentUser.Password" class="form-control" placeholder="Password" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>

</form>